  <!--  events text -->
  <div class="events">

    <div class="events-show clearfix">
      <div class="col-md-10 col-md-offset-1">
        <div class="banner-text text-center">
          <h1>今月のイベント一覧</h1>
          <div class="swiper-container">
            <div class="swiper-wrapper">
              <% @events.each.with_index do |event,i| %>
                <%= link_to image_tag(event.main_image), event, class: "swiper-slide col-md-12 photo" %>
                <% break if i == 3 %>
              <% end %>
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
            <!-- Add Arrows -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>
        </div>
      </div>
    </div>

    <script>
    var swiper = new Swiper('.swiper-container', {
        pagination: '.swiper-pagination',
        nextButton: '.swiper-button-next',
        prevButton: '.swiper-button-prev',
        paginationClickable: true,
        spaceBetween: 30,
        centeredSlides: true,
        autoplay: 2500,
        autoplayDisableOnInteraction: false
    });
    </script>

    <!-- events text -->
    <!-- Page Features -->
    <div class="row text-center">
      <% @events.each do |event| %>
        <% @reserve_token = 0 %>

        <div class="col-md-3 col-sm-6 hero-feature">
          <div class="thumbnail">
            <%= image_tag event.main_image, class: "index_main_img" %>
            <div class="caption">
              <h3><%= event.name %></h3>
              <p><%= event.place %><br>
                <%= event.date %><br></p>
              <p>
                <% @reserve_token += 1 if reserved?(event.participating_users) %>
                <% if @reserve_token > 0 %>
                  <span class="btn btn-default">申請済み</span>
                <% else %>
                  <%= link_to '行く！', participate_path(event.id), class: "btn btn-primary", method: :post, data: {confirm: "本当に参加しますか？"} %>
                <% end %>
                <%= link_to '詳細', event, class: "btn btn-default" %>
              </p>
            </div>
          </div>
        </div>

      <% end %>

    </div>
